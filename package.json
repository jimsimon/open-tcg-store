{
  "name": "@open-tcgs/workspace",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx --conditions=development src/server.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "npx @biomejs/biome lint --write",
    "format": "npx @biomejs/biome check --fix --linter-enabled=false && prettier . --write",
    "db:update-better-auth-schema": "npx @better-auth/cli generate -y --config ./packages/api/src/auth.ts --output ./packages/api/src/db/otcgs/auth-schema.ts",
    "db:push": "drizzle-kit push --config ./src/db/otcgs/drizzle.config.ts",
    "db:pull:mtg": "drizzle-kit pull --config ./src/db/mtg/drizzle.config.ts",
    "graphql:generate": "graphql-codegen",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:browser": "vitest --browser",
    "test:browser:run": "vitest run --browser"
  },
  "dependencies": {
    "@awesome.me/webawesome": "3.0.0-beta.5",
    "@better-auth/cli": "^1.3.11",
    "@fontsource/inconsolata": "5.2.7",
    "@graphql-tools/schema": "^10.0.25",
    "@koa/bodyparser": "^6.0.0",
    "@koa/cors": "5.0.0",
    "@koa/router": "^14.0.0",
    "@libsql/client": "^0.15.14",
    "@lit-labs/ssr": "^3.3.1",
    "better-auth": "^1.3.11",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "glob": "^11.0.3",
    "graphql-http": "^1.22.4",
    "graphql-scalars": "^1.24.2",
    "js-cookie": "3.0.5",
    "koa": "^3.0.1",
    "koa-connect": "^2.1.0",
    "koa-mount": "^4.2.0",
    "lit": "^3.3.1",
    "pg": "8.16.3",
    "ruru": "^2.0.0-beta.29",
    "tsx": "^4.20.4",
    "workspace-root": "3.3.1"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.0",
    "@biomejs/biome": "^2.2.2",
    "@eddeee888/gcg-typescript-resolver-files": "^0.12.1",
    "@graphql-codegen/cli": "^5.0.7",
    "@types/cli-progress": "3.11.6",
    "@types/js-cookie": "3.0.6",
    "@types/koa": "^3.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__cors": "5.0.0",
    "@types/koa-mount": "^4.0.5",
    "@types/pg": "8.15.5",
    "@vitest/browser": "^3.2.4",
    "cli-progress": "3.12.0",
    "drizzle-kit": "^0.31.4",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "shadow-dom-testing-library": "^1.13.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
