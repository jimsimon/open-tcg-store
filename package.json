{
  "name": "tcg-store",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx --conditions=development src/server.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "npx @biomejs/biome lint --write",
    "format": "npx @biomejs/biome check --fix --linter-enabled=false && prettier . --write",
    "db:update-better-auth-schema": "npx @better-auth/cli generate -y --output ./src/db/auth-schema.ts",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.7",
    "@electric-sql/pglite": "^0.3.7",
    "@fontsource/lato": "^5.2.6",
    "@graphql-tools/schema": "^10.0.25",
    "@koa/bodyparser": "^6.0.0",
    "@koa/router": "^14.0.0",
    "@lit-labs/ssr": "^3.3.1",
    "@awesome.me/webawesome": "3.0.0-beta.4",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "glob": "^11.0.3",
    "graphql-http": "^1.22.4",
    "graphql-scalars": "^1.24.2",
    "js-cookie": "3.0.5",
    "koa": "^3.0.1",
    "koa-connect": "^2.1.0",
    "koa-mount": "^4.2.0",
    "lit": "^3.3.1",
    "ruru": "^2.0.0-beta.29",
    "tsx": "^4.20.4"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.0",
    "@biomejs/biome": "^2.2.2",
    "@eddeee888/gcg-typescript-resolver-files": "^0.12.1",
    "@graphql-codegen/cli": "^5.0.7",
    "@types/js-cookie": "3.0.6",
    "@types/koa": "^3.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-mount": "^4.0.5",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}
